              </div>
              <div className={`w-3 h-3 rounded-full ${isOnline ? 'bg-green-400' : 'bg-red-400'} animate-pulse`}></div>
            </div>
          </div>
        </div>
      </div>

      {/* Screen Content */}
      <div className="flex-1">
        {renderScreen()}
      </div>

      {/* Bottom Navigation */}
      <BottomNavigation />
    </div>
  );
};

export default CoastalSentinelApp;
